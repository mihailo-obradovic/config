{
  // Workbench
  "breadcrumbs.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.maxComputationTime": 0,
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.vetur": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "editor.fontFamily": "'Iosevka Nerd Font Mono', 'monospace', 'monospace', 'Dubai'",
  "editor.fontSize": 16,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.tabCompletion": "on",
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.fontFamily": "'UbuntuMono Nerd Font Mono'",
  "terminal.integrated.fontSize": 13,
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "native",
  "window.zoomLevel": 1, // 0 for 1080p, 1 for 1440p, 2 for 2160p screens
  "workbench.colorCustomizations": {
    "editor.background": "#181d28",
    "editorRuler.foreground": "#222e38"
  },
  "workbench.colorTheme": "Dracula Refined",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "workbench.iconTheme": "a-file-icon-vscode",
  "workbench.layoutControl.enabled": false,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",

  // Linting and formatting
  "eslint.validate": [
    "html",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "files.insertFinalNewline": true,
  "html.format.wrapAttributes": "force-expand-multiline",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.arrowParens": "avoid",
  "prettier.trailingComma": "none",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },

  // Git/GitLens
  "git.enableSmartCommit": true,
  "git.mergeEditor": false,
  "githubPullRequests.pullBranch": "never",
  "gitlens.codeLens.scopes": ["containers", "document"],
  "git.blame.statusBarItem.enabled": false,

  // i18n/PHP/Laravel/Inertia/Python/LaTeX (disabled by default, enabled for specific workspaces)
  "blade.format.enable": true,
  "bladeFormatter.format.wrapAttributesMinAttrs": 3,
  "i18n-ally.defaultNamespace": "i18n/locales",
  "i18n-ally.dirStructure": "dir",
  "inertia.pages": "resources/js/**/*.vue",
  "intelephense.diagnostics.undefinedMethods": false,
  "latex-workshop.view.pdf.viewer": "tab",

  // GitHub Copilot (VS Code only)
  "github.copilot.enable": {
    "*": true,
    "plaintext": false
  },
  "chat.instructionsFilesLocations": {
    ".github/instructions": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,

  // Cursor AI only
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.cpp.disabledLanguages": ["plaintext"],
  "cursor.cpp.enablePartialAccepts": true
}
